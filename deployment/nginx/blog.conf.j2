server {
    listen      443 ssl;
    listen [::]:443 ssl;

    server_name         {{server_name}};

    ssl_certificate     {{cert_dir}}{{server_name}}.crt;
    ssl_certificate_key {{cert_dir}}{{server_name}}.crt;

    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    root /usr/share/nginx/html;

    location / {
    }
}